<MudTabs @bind-ActivePanelIndex="this.SelectedIndex" PanelClass="code-block" MinimumTabWidth="30px" Class="mt-2">
    @foreach (var block in this.blocks)
    {
        <MudTabPanel Text="@block.Title">
            @block.Fragment
        </MudTabPanel>
    }
</MudTabs>
<CascadingValue Value="this">
    @this.ChildContent
</CascadingValue>
